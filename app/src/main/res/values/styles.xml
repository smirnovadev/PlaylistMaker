<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">22sp</item>
        <item name="cornerRadius">@dimen/button_radius_main</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_padding_main</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TextSettingStyle">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal__settings_menu_option
        </item>
        <item name="android:paddingVertical">@dimen/padding_vertical__settings_menu_option</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ImageViewSetting">
        <item name="android:tint">?attr/colorSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:padding">@dimen/settings_option_button_padding</item>
    </style>

    <style name="TrackNameText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackDescriptionText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchMessageText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ButtonClearHistoryStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="iconGravity">textStart</item>

    </style>
    <style name="AudioPlayerText">
    <item name="android:fontFamily">@font/ys_display_regular</item>
    <item name="android:textColor">@color/searchTextGray</item>
    <item name="android:textSize">16sp</item>
    </style>
    <style name="track_data">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MusicMessageText">
    <item name="android:fontFamily">@font/ys_display_medium</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">@color/colorOnPrimary</item>
    <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemPlaylistText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CreateNewFragmentText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>